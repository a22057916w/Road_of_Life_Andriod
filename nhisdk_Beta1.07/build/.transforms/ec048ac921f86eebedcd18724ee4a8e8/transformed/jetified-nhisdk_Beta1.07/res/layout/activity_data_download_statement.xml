<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".LoginDescriptionActivity">

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:background="@drawable/bg_data_download_statement_page">

        <LinearLayout
            android:id="@+id/nhisdk_data_download_statement_bottom_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/margin_middle"
            android:layout_marginLeft="@dimen/margin_normal"
            android:layout_marginRight="@dimen/margin_normal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/nhisdk_data_download_statement_countdown_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="@string/nhisdk_data_download_statement_countdown"
                android:textColor="@android:color/black"
                android:textSize="@dimen/common_content_txt_size" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_normal"
                android:orientation="horizontal">

                <RelativeLayout
                    android:id="@+id/nhisdk_download_statement_no_produce_btn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_normal"
                    android:layout_marginRight="@dimen/margin_small"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/bottom_bar_btn_height"
                        android:layout_centerInParent="true"
                        android:background="@drawable/bg_download_statement_no_produce"
                        android:gravity="center"
                        android:text="@string/nhisdk_data_download_statement_no_produce"
                        android:textSize="@dimen/common_btn_txt_size" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/nhisdk_download_statement_i_know_btn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_small"
                    android:layout_marginRight="@dimen/margin_normal"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/nhisdk_download_statement_i_know_txt"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/bottom_bar_btn_height"
                        android:layout_centerInParent="true"
                        android:background="@drawable/bg_download_statement_i_know_unable"
                        android:gravity="center"
                        android:text="@string/nhisdk_data_download_statement_yes"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/common_btn_txt_size" />
                </RelativeLayout>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/nhisdk_data_download_statement_bottom_bar"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_data_download_statement_header">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginBottom="@dimen/margin_middle"
                    android:layout_marginTop="@dimen/margin_middle"
                    android:gravity="center"
                    android:text="@string/nhisdk_data_download_statement_title"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/common_subtitle_txt_size" />
            </RelativeLayout>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/margin_normal"
                android:layout_marginBottom="@dimen/margin_normal">

                <TextView
                    android:id="@+id/nhisdk_download_statement_content_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_normal"
                    android:layout_marginRight="@dimen/margin_normal"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/common_content_txt_size" />
            </ScrollView>

        </LinearLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />
</LinearLayout>